<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sun-web-app
        PUBLIC "-//Sun Microsystems, Inc.//DTD GlassFish Application Server 3.0 Servlet 3.0//EN"
        "http://www.sun.com/software/appserver/dtds/sun-web-app_3_0-0.dtd">
<sun-web-app error-url="">
    <context-root>/ch03</context-root>

    <security-role-mapping>
        <role-name>patients</role-name>
        <group-name>patients</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>admin</role-name>
        <group-name>administrators</group-name>
    </security-role-mapping>

    <security-role-mapping>
        <role-name>customers</role-name>
        <group-name>customers</group-name>
    </security-role-mapping>

    <class-loader delegate="true"/>

    <jsp-config>
        <property name="keepgenerated" value="true">
            <description>Keep a copy of the generated servlet class java code.</description>
        </property>
    </jsp-config>

</sun-web-app>
